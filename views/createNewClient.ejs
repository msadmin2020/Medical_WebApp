<%- include('header') -%>
<%- include('dashboard') -%>
    <div class="top new-stock-container">
        <h4>Add New Client</h4>
        <form method="POST" action="/route/api/medical/clients">
            <div class="add-stock-container">
                <div class="form-inline">
                    <b for="client_name">Client Name:</b>
                    <input type="text" id="client_name" name="client_name" class="form-control">
                </div>
                <div class="form-inline">
                    <b for="surname">Surname:</b>
                    <input type="text" id="surname" name="surname" class="form-control">
                </div>
                <div class="form-inline">
                    <b for="mobile_number">Mobile Number:</b>
                    <input type="text" id="mobile_number" name="mobile_number" class="form-control">
                </div>        
                <div class="form-inline">
                    <b for="address">Address:</b>
                    <input type="text" id="address" name="address" class="form-control">
                </div>        
                <div class="form-inline">
                    <b for="city">City:</b>
                    <input type="text" id="city" name="city" class="form-control">
                </div>   
                <div class="form-inline">
                    <button type="submit" class="btn btn-success rounded-pill">Add Client</button>
                </div>
            </div>
        </form>
    </div>
<%- include('footer') -%>