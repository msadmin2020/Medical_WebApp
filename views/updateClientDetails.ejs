<%- include('header') -%>
<%- include('dashboard') -%>
    <div class="top new-stock-container">
        <h4>Update Client Details</h4>
        <form method="POST" id="update_client" action="<%=`/route/api/medical/clients/${updateClient._id}/update?_method=PUT`%>">
            <div class="add-stock-container">
                <div class="form-inline">
                    <b for="client_name">Company Name:</b>
                    <input type="text" id="client_name" name="client_name" value="<%= updateClient.client_name%>" class="form-control">
                </div>
                <div class="form-inline">
                    <b for="surname">Surname:</b>
                    <input type="text" id="surname" name="surname" value="<%= updateClient.surname%>" class="form-control">
                </div>
                <div class="form-inline">
                    <b for="mobile_number">Mobile Number:</b>
                    <input type="text" id="mobile_number" name="mobile_number" value="<%= updateClient.mobile_number%>" class="form-control">
                </div>
                <div class="form-inline">
                    <b for="address">Address:</b>
                    <input type="text" id="address" name="address" value="<%= updateClient.address%>" class="form-control">
                </div>    
                <div class="form-inline">
                    <b for="city">City:</b>
                    <input type="text" id="city" name="city" value="<%= updateClient.city%>" class="form-control">
                </div>            
                <div class="form-inline">
                    <button type="submit" class="btn btn-success rounded-pill">Update Client</button>
                </div>
            </div>
        </form>
    </div>
<%- include('footer') -%> 