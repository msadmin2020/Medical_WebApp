<%- include('header') -%>
<%- include('dashboard') -%>
    <div class="top new-stock-container">
        <h4>Update Stock Details</h4>
        <form method="POST" id="update_stock" action="<%=`/route/api/medical/stocks/${updateStock._id}/update?_method=PUT`%>">
            <div class="add-stock-container">
                <div class="form-inline">
                    <b for="item_name">Item Name:</b>
                    <input type="text" id="item_name" name="item_name" value="<%= updateStock.item_name%>" class="form-control" spellcheck="false" autocomplete="off">
                </div>
                <div class="form-inline">
                    <b for="item_detail">Item Detail:</b>
                    <input type="text" id="item_detail" name="item_detail" value="<%= updateStock.item_detail%>" class="form-control" spellcheck="false" autocomplete="off">
                </div>
                <div class="form-inline">
                    <b for="item_price">Item Price:</b>
                    <input type="text" id="item_price" name="item_price" value="<%= updateStock.item_price%>" class="form-control" spellcheck="false" autocomplete="off">
                </div>
                <div class="form-inline">
                    <b for="quantity">Quantity:</b>
                    <input type="text" id="quantity" name="quantity" value="<%= updateStock.quantity%>" class="form-control" spellcheck="false" autocomplete="off">
                </div>
                <div class="form-inline">
                    <b for="company_name">Company Name:</b>
                    <input type="text" id="company_name" name="company_name" value="<%= updateStock.company_name%>" class="form-control" list="companyList" spellcheck="false" autocomplete="off">
                    <datalist id="companyList">
                        <% for(var i=0; i<getCompany.length; i++) { %>
                            <option value="<%= getCompany[i].company_name %>"><%= getCompany[i].company_name %></option>
                        <% } %>
                    </datalist>                    
                </div>
                <div class="form-inline">
                    <b for="location">Location:</b>
                    <input type="text" id="location" name="location" value="<%= updateStock.location %>" class="form-control" spellcheck="false" autocomplete="off">
                </div>
                <div class="form-inline">
                    <b for="expire_date">Expire Date:</b>
                    <input type="date" id="date" name="expire_date" value="<%= updateStock.expire_date.toISOString().split('T')[0] %>" class="form-control" spellcheck="false" autocomplete="off">
                </div>
                <div class="form-inline">
                    <button type="submit" class="btn btn-success rounded-pill">Update Stock</button>
                </div>
            </div>
        </form>
    </div>
<%- include('footer') -%>